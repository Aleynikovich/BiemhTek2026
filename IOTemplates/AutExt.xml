<?xml version="1.0" encoding="utf-8"?>
<SunriseIOGroupDescription xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.0.0">
  <IOGroup DisplayName="AutomaticExternal" IconName="AutExt" SignalTypes="InOut" TemplateName="AutomaticExternal">
    <IOs>
      <DigitalIOItem Name="externalStart" DataType="BOOL" IOType="Input" UsedBitWidth="1" IsConnected="false">
        <Description>Triggers the Java Application main loop</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="errorAcknowledge" DataType="BOOL" IOType="Input" UsedBitWidth="1" IsConnected="false">
        <Description>Clears robot faults</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="plcHeartbeat" DataType="BOOL" IOType="Input" UsedBitWidth="1" IsConnected="false">
        <Description>1Hz toggle from PLC Clock_1Hz</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="targetProgramNumber" DataType="SIGNED_INT" IOType="Input" UsedBitWidth="16" IsConnected="false">
        <Description>Program ID requested by PLC</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="loadProgramRequest" DataType="BOOL" IOType="Input" UsedBitWidth="1" IsConnected="false">
        <Description>Handshake trigger to load the program ID</Description>
      </DigitalIOItem>

      <DigitalIOItem Name="isAppRunning" DataType="BOOL" IOType="Output" UsedBitWidth="1" IsConnected="false">
        <Description>Java Application is active</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="isRobotMoving" DataType="BOOL" IOType="Output" UsedBitWidth="1" IsConnected="false">
        <Description>Physical motion is detected</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="isReadyForStart" DataType="BOOL" IOType="Output" UsedBitWidth="1" IsConnected="false">
        <Description>Drives powered and no faults</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="isHomed" DataType="BOOL" IOType="Output" UsedBitWidth="1" IsConnected="false">
        <Description>Robot is at safe home position</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="activeProgramNumber" DataType="SIGNED_INT" IOType="Output" UsedBitWidth="16" IsConnected="false">
        <Description>Feedback of currently loaded program ID</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="programLoadedMirror" DataType="BOOL" IOType="Output" UsedBitWidth="1" IsConnected="false">
        <Description>Handshake feedback for loadProgramRequest</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="currentRobotSpeed" DataType="SIGNED_INT" IOType="Output" UsedBitWidth="16" IsConnected="false">
        <Description>Actual speed percentage 0-100</Description>
      </DigitalIOItem>
      <DigitalIOItem Name="errorID" DataType="SIGNED_INT" IOType="Output" UsedBitWidth="16" IsConnected="false">
        <Description>Specific fault code for HMI display</Description>
      </DigitalIOItem>
    </IOs>
    <Description>Main Automatic External Handshake Group</Description>
  </IOGroup>
</SunriseIOGroupDescription>